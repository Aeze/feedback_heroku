<%- model_class = Issue -%>
<h1><%= model_class.model_name.human %></h1>

<dl>
  <dt class="bold"><%= model_class.human_attribute_name(:name) %>:</dt>
  <dd><%= @issue.name %></dd>
  <dt class="bold"><%= model_class.human_attribute_name(:issue_type) %>:</dt>
  <dd><%= @issue.issue_type %></dd>
  <dt class="bold"><%= model_class.human_attribute_name(:description) %>:</dt>
  <dd><%= @issue.description %></dd>
</dl>

<div>
  <%= link_to 'Upvote Issue', 
              upvote_issue_path(@issue), 
              method: :put, 
              class: 'btn' %>
  <%= link_to 'Back', issues_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_issue_path(@issue), :class => 'btn' %>
  <%= link_to 'Destroy', issue_path(@issue),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn' %>
</div>
