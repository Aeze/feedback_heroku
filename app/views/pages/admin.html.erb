<div class="units-row">

  <div class="unit-20">
    <h5>Navigation</h5>
    <nav class="nav">
      <ul>
        <li><a href="">Dash</a></li>
        <li><a href="">Issues</a></li>
        <li><a href="">Users</a></li>
        <li><a href="">Posts</a></li>
      </ul>
    </nav>
  </div>

  <div class="unit-80">

  <h3>Statistics</h3>
  Total Issues 
  Active Issues
  Total Users
  Total Comments
  

  <h3>Manage Users</h3>
    <table>
      <thead>
        <th>Username</th>
        <th>E-mail</th>
        <th>Issues Posted</th>
        <th>Issues Voted</th>
        <th>Comment Count</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.issues.count %></td>
          <td><%= (user.get_voted Issue).count %></td>
          <td><%= user.comments.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>


